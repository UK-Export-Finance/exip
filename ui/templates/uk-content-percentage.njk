{% extends 'index.njk' %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from 'govuk/components/error-summary/macro.njk' import govukErrorSummary %}
{% from 'govuk/components/radios/macro.njk' import govukRadios %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% import './components/details-text.njk' as detailsText %}
{% from 'govuk/components/button/macro.njk' import govukButton %}
{% from "govuk/components/error-message/macro.njk" import govukErrorMessage %}

{% block pageTitle %}
  {{ CONTENT_STRINGS.PAGE_TITLE }}
{% endblock %}

{% block content %}

  {{ govukBackLink({
    text: CONTENT_STRINGS.LINKS.BACK,
    href: BACK_LINK,
    attributes: {
      "data-cy": "back-link"
    }
  }) }}

  {% if validationErrors.summary %}
    {{ govukErrorSummary({
      titleText: "There is a problem",
      errorList: validationErrors.summary
    }) }}
  {% endif %}

  {% set class = "govuk-form-group" %}

  {% if validationErrors.errorList[FIELD_NAME] %}
    {% set class = "govuk-form-group govuk-form-group--error" %}
  {% endif %}

  <form method="POST">

    <input type="hidden" name="_csrf" value="{{ csrfToken }}">

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-three-quarters-from-desktop">
        {{ govukRadios({
          classes: "govuk-radios--inline",
          idPrefix: FIELD_NAME,
          name: FIELD_NAME,
          fieldset: {
            legend: {
              html: "<h1 class='govuk-heading-l' data-cy='heading'>" + CONTENT_STRINGS.HEADING + "</h1>"
            }
          },
          items: [
            {
              value: true,
              text: "Yes",
              label: {
                attributes: {
                  "data-cy": FIELD_NAME + "-yes"
                }
              },
              attributes: {
                "data-cy": FIELD_NAME + "-yes-input"
              },
              checked: submittedValues[FIELD_NAME] === true
            },
            {
              value: false,
              text: "No",
              label: {
                attributes: {
                  "data-cy": FIELD_NAME + "-no"
                }
              },
              checked: submittedValues[FIELD_NAME] === false
            }
          ],
          errorMessage: validationErrors.errorList[FIELD_NAME]and {
            text: validationErrors.errorList[FIELD_NAME].text,
            attributes: {
              "data-cy": FIELD_NAME + "-error-message"
            }
          }
        }) }}

      </div>
    </div>

    {{ govukButton({
      text: CONTENT_STRINGS.BUTTONS.CONTINUE,
      attributes: {
        'data-cy': 'submit-button'
      }
    }) }}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-three-quarters-from-desktop">

        {{ govukDetails({
          summaryText: CONTENT_STRINGS.DETAILS.INTRO,
          html: detailsText.render({
            items: CONTENT_STRINGS.DETAILS.ITEMS
          }),
          attributes: {
            "data-cy": "details"
          }
        }) }}

      </div>
    </div>

  </form>

{% endblock %}
