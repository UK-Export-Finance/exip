{% extends 'index.njk' %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from 'govuk/components/error-summary/macro.njk' import govukErrorSummary %}
{% from 'govuk/components/label/macro.njk' import govukLabel %}
{% from 'govuk/components/hint/macro.njk' import govukHint %}
{% from 'govuk/components/button/macro.njk' import govukButton %}
{% from "govuk/components/error-message/macro.njk" import govukErrorMessage %}

{% block pageTitle %}
  {{ CONTENT_STRINGS.PAGE_TITLE }}
{% endblock %}


{% block content %}

  {{ govukBackLink({
    text: CONTENT_STRINGS.LINKS.BACK,
    href: BACK_LINK,
    attributes: {
      "data-cy": "back-link"
    }
  }) }}

  {% if validationErrors.summary %}
    {{ govukErrorSummary({
      titleText: "There is a problem",
      errorList: validationErrors.summary
    }) }}
  {% endif %}

  <form method="POST">

    <input type="hidden" name="_csrf" value="{{ csrfToken }}">
    <input type="hidden" name="{{ HIDDEN_FIELD_NAME }}" id="{{ HIDDEN_FIELD_NAME }}">

    {{ govukLabel({
      for: FIELD_NAME_COUNTRY_SEARCH,
      classes: "govuk-heading-l",
      html: "<h1 class='govuk-heading-l'><label for='" + FIELD_NAME + "'>" + CONTENT_STRINGS.HEADING + "</label></h1>",
      attributes: {
        "data-cy": "heading"
      }
    }) }}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds-from-desktop">

        {{ govukHint({
          text: FIELD_HINT,
          id: FIELD_NAME + '-hint',
          attributes: {
            "data-cy": FIELD_NAME + "-hint"
          }
        }) }}

      </div>
    </div>

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-one-half-from-desktop">

        {% set class = "govuk-form-group" %}

        {% if validationErrors.errorList[FIELD_NAME] %}
          {% set class = "govuk-form-group govuk-form-group--error" %}
        {% endif %}

        <div class="{{ class }}">
          {{ govukErrorMessage({
            text: validationErrors.errorList[FIELD_NAME].text,
            attributes: {
              "data-cy": FIELD_NAME + "-error-message"
            }
          }) }}

          <select class="govuk-select" id="{{ FIELD_NAME }}">
            <option value="" disabled selected>{{ CONTENT_STRINGS.HINTS.PICK_OPTION }}</option>

            {% for country in countries %}
              <option value="{{ country.value }}">{{ country.name }}</option>
            {% endfor %}
          </select>
        </div>

      </div>
    </div>

    {{ govukButton({
      text: CONTENT_STRINGS.BUTTONS.CONTINUE,
      attributes: {
        'data-cy': 'submit-button'
      }
    }) }}

  </form>

  <script src="/assets/js/locationAutocomplete.js" type="text/javascript"></script>

  <script type="text/javascript">
    openregisterLocationPicker({
      selectElement: document.getElementById('{{ FIELD_NAME }}'),
      id: '{{ FIELD_NAME }}',
      defaultValue: '',
      onConfirm: function(event) {
        if (event) {
          document.getElementById('{{ HIDDEN_FIELD_NAME }}').value = event.name;
        }
      }
    })
  </script>

{% endblock %}
