{% macro render(params) %}

  <li>
    {% for child in params.content.children %}
    
      {% for grandChild in child.children %}

        {% if grandChild.type === 'link' %}
          <a class="govuk-link" href={{ grandChild.href }}>
            {% for child in grandChild.children %}
              {{ child.text }}
            {% endfor %}
          </a>

          {% else %}
          {{ grandChild.text }}
        {% endif %}

      {% endfor %}

    {% endfor %}
  </li>

{% endmacro %}
