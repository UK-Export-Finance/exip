{% macro render(params) %}

  <p class="govuk-body">
    {% for child in params.content %}

      {% if child.type and child.type === 'link' %}
        <a class="govuk-link" href={{ child.href }}>{{ child.children[0].text}}</a>
      {% endif %}

      {% if child.text %}
        <span data-cy="paragraph-{{ loop.index }}">{{ child.text }}</span>
      {% endif %}

    {% endfor %}
  </p>

{% endmacro %}
