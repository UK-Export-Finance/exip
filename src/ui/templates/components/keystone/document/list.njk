{% import './list-item.njk' as listItem %}

{% macro render(params) %}

  {% if params.type === 'ordered' %}
    <ol class="govuk-list govuk-list--number">

      {% for child in params.content %}
        {{ listItem.render({
          content: child
        }) }}
      {% endfor %}

    </ol>
  {% endif %}

  {% if params.type === 'unordered' %}
    <ul class="govuk-list govuk-list--bullet">

      {% for child in params.content %}
        {{ listItem.render({
          content: child
        }) }}
      {% endfor %}

    </ul>
  {% endif %}

{% endmacro %}
