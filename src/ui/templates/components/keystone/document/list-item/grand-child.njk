{% import './great-grand-child.njk' as greatGrandChildListItem %}

{% macro render(params) %}

  {% set child = params.child %}
  {% set class = params.class %}
  {% set loopIndex = params.loopIndex %}

  {% if child.type === 'list-item' %}

    {% for greatGrandChild in child.children %}

      {{ greatGrandChildListItem.render({
        child: greatGrandChild,
        class: class,
        loopIndex: loopIndex
      }) }}

    {% endfor %}  
  {% endif %}
{% endmacro %}
