{% import '../components/status-tag.njk' as statusTag %}

{% macro render(params) %}

  {% set row = params.row %}
 
  <div class="govuk-summary-list__row">

    <dt class="ukef-task-list--key-cell">
      <a class="govuk-link govuk-link--no-visited-state" href="{{ row.href }}">
        {{ row.title }}
      </a>
    </dt>

    <dd class="govuk-summary-list__actions">
      {{ statusTag.render({
        status: row.status,
        href: row.href
      }) }}
    </dd>
  </div>

{% endmacro %}
