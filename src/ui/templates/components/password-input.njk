{% from "govuk/components/password-input/macro.njk" import govukPasswordInput %}

{% macro render(params) %}

  {% set id = params.id %}
  {% set labelText = params.labelText %}
  {% set hintHtml = params.hintHtml %}
  {% set value = params.value %}
  {% set errorMessage = params.errorMessage %}

  {{ govukPasswordInput({
    label: {
      text: labelText,
      classes: "govuk-!-font-weight-bold govuk-!-font-size-24",
      attributes: {
        id: id + '-label',
        'data-cy': id + '-label'
      }
    },
    attributes: {
      'data-cy': id + '-input'
    },
    id: id,
    name: id,
    type: 'password',
    hint: hintHtml and {
      html: hintHtml
    },
    classes: "govuk-!-width-one-half",
    value: value,
    errorMessage: errorMessage and {
      text: errorMessage.text,
      attributes: {
        "data-cy": id + "-error-message"
      }
    }
  }) }}

{% endmacro %}
