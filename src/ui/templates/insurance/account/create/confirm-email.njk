{% extends 'index.njk' %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% block pageTitle %}
  {{ CONTENT_STRINGS.PAGE_TITLE }}
{% endblock %}

{% block content %}

  {{ govukBackLink({
    text: CONTENT_STRINGS.LINKS.BACK,
    href: BACK_LINK,
    attributes: {
      "data-cy": "back-link"
    }
  }) }}

  <h1 class="govuk-heading-xl" data-cy="heading">{{ CONTENT_STRINGS.PAGE_TITLE }}</h1>

  <p data-cy="we-sent-link-to">{{ CONTENT_STRINGS.WE_SENT_LINK_TO }} {{ email }}</p>
  <p class="govuk-!-margin-bottom-9" data-cy="check-your-email">{{ CONTENT_STRINGS.CHECK_YOUR_EMAIL }}</p>

  <h2 class="govuk-heading-s" data-cy="having-problems-heading">{{ CONTENT_STRINGS.HAVING_PROBLEMS.HEADING }}</h2>

  {% set REQUEST_NEW = CONTENT_STRINGS.HAVING_PROBLEMS.REQUEST_NEW %}

  <p>
    <span data-cy="request-new-you-can">{{ REQUEST_NEW.YOU_CAN }}</span>
    <a
      class="govuk-link"
      href={{ REQUEST_NEW.LINK.HREF }}
      data-cy="request-new-link"
    >
      {{ REQUEST_NEW.LINK.TEXT }}
    </a>
    <span data-cy="request-new-if-not-received">&nbsp;{{ REQUEST_NEW.IF_NOT_RECEIVED }}</span>
  </p>

  {% set WRONG_EMAIL = CONTENT_STRINGS.HAVING_PROBLEMS.WRONG_EMAIL %}

  <p>
    <span data-cy="entered-incorrectly">{{ WRONG_EMAIL.ENTERED_INCORRECTLY }}</span>
    <a
      class="govuk-link"
      href={{ WRONG_EMAIL.CREATE_ACCOUNT_AGAIN.HREF }}
      data-cy="create-account-again-link"
    >
      {{ WRONG_EMAIL.CREATE_ACCOUNT_AGAIN.TEXT }}
    </a>
  </p>

{% endblock %}
