{% extends 'index.njk' %}

{% block pageTitle %}
  {{ CONTENT_STRINGS.PAGE_TITLE }}
{% endblock %}

{% block content %}

  <h1 class="govuk-heading-xl" data-cy="{{ DATA_CY.HEADING }}">{{ CONTENT_STRINGS.PAGE_TITLE }}</h1>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">

      <p class="govuk-body" data-cy="thank-you">{{ CONTENT_STRINGS.THANK_YOU }}</p>

      <a class="govuk-button" href="{{ SIGN_IN_LINK }}" data-cy="continue">{{ CONTENT_STRINGS.BUTTONS.CONTINUE }}</a>

    </div>
  </div>
      
{% endblock %}
