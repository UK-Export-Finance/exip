{% extends 'index.njk' %}

{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% import '../../components/customer-service-helpline.njk' as customerServiceHelpline %}

{% block pageTitle %}
  {{ CONTENT_STRINGS.PAGE_TITLE }}
{% endblock %}

{% block content %}

  {{ govukBackLink({
    text: CONTENT_STRINGS.LINKS.BACK,
    href: BACK_LINK,
    attributes: {
      "data-cy": "back-link"
    }
  }) }}

  <h1 class="govuk-heading-xl" data-cy="heading">{{ CONTENT_STRINGS.PAGE_TITLE }}</h1>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">

      <p class="govuk-body" data-cy="intro">{{ CONTENT_STRINGS.INTRO }}</p>

      {{customerServiceHelpline.render({
        content: CONTENT_STRINGS.GENERAL_ENQUIRIES
      }) }}

    </div>
  </div>
      
{% endblock %}
