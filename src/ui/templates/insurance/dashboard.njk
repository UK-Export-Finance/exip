{% extends 'index.njk' %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% block pageTitle %}
  {{ CONTENT_STRINGS.PAGE_TITLE }}
{% endblock %}

{% block content %}

  {{ govukBackLink({
    text: CONTENT_STRINGS.LINKS.BACK,
    href: BACK_LINK,
    attributes: {
      "data-cy": "back-link"
    }
  }) }}

  <h1 class="govuk-heading-xl" data-cy="heading">{{ CONTENT_STRINGS.PAGE_TITLE }}</h1>

  {# temporary list of applications for QA/development #}

  {% if applications.length %}
    <ul class="govuk-list govuk-list--bullet">
      {% for application in applications %}
        <li>
          <a
            class="govuk-link"
            href="{{ ROUTES.INSURANCE_ROOT }}/{{ application.referenceNumber }}{{ ROUTES.ALL_SECTIONS}}"
            data-cy="list-item-{{ application.referenceNumber }}"
          >{{ application.referenceNumber }}
          </a>
        </li>
      {% endfor %}
    </ul>
  {% endif %}

{% endblock %}
