{% extends 'index.njk' %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from 'govuk/components/error-summary/macro.njk' import govukErrorSummary %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/hint/macro.njk" import govukHint %}

{% block pageTitle %}
  {{ CONTENT_STRINGS.PAGE_TITLE }}
{% endblock %}

{% block content %}

  {{ govukBackLink({
    text: CONTENT_STRINGS.LINKS.BACK,
    href: BACK_LINK,
    attributes: {
      "data-cy": "back-link"
    }
  }) }}

  {% if validationErrors.summary %}
    {{ govukErrorSummary({
      titleText: "There is a problem",
      errorList: validationErrors.summary,
      attributes: {
        'data-cy': 'error-summary'
      }
    }) }}
  {% endif %}

  <div class="govuk-grid-row">
    <form method="POST" novalidate>
      <input type="hidden" name="_csrf" value="{{ csrfToken }}">

      <div class="govuk-grid-column-three-quarters-from-desktop">
        <span class="govuk-caption-xl" data-cy="heading-caption">
          {{CONTENT_STRINGS.HEADING_CAPTION}}
        </span>
        <h1 class="govuk-heading-xl" data-cy="heading">{{ CONTENT_STRINGS.PAGE_TITLE }}</h1>
      </div>

      <div class="govuk-grid-column-three-quarters-from-desktop">
        <h2 class="govuk-heading-m govuk-!-margin-bottom-2" data-cy="{{FIELDS.COMPANY_NAME.ID}}-label">{{ FIELDS.COMPANY_NAME.LABEL }}</h2>

        {{ govukHint({
          text: FIELDS.COMPANY_NAME.HINT,
          attributes: {
          "data-cy": FIELDS.COMPANY_NAME.ID + "-hint"
          }
        }) }}

        <p class="govuk-body" data-cy="{{FIELDS.COMPANY_NAME.ID}}">{{ application.exporterCompany[FIELDS.COMPANY_NAME.ID] }}</p>
      </div>

      <div class="govuk-grid-column-three-quarters-from-desktop govuk-!-margin-top-5">
        <h2 class="govuk-heading-m govuk-!-margin-bottom-2" data-cy="contact-details-heading">{{ CONTENT_STRINGS.CONTACT_DETAILS.LABEL }}</h2>

        {{ govukHint({
          text: CONTENT_STRINGS.CONTACT_DETAILS.HINT,
          attributes: {
          "data-cy": "contact-details-hint"
          }
        }) }}

        {{ govukInput({
          id: FIELDS.FIRST_NAME.ID,
          name: FIELDS.FIRST_NAME.ID,
          value: submittedValues[FIELDS.FIRST_NAME.ID] or application.exporterBusiness[FIELDS.FIRST_NAME.ID],
          label: {
            text: FIELDS.FIRST_NAME.LABEL,
            classes: "govuk-label--s",
            attributes: {
              "data-cy": FIELDS.FIRST_NAME.ID + "-label"
            }
          },
          classes: "govuk-input--width-10",
          attributes: {
            "data-cy": FIELDS.FIRST_NAME.ID
          },
          errorMessage: validationErrors.errorList[FIELDS.FIRST_NAME.ID] and {
            text: validationErrors.errorList[FIELDS.FIRST_NAME.ID].text,
            attributes: {
              "data-cy": FIELDS.FIRST_NAME.ID + "-error"
            }
          }
        }) }}

        {{ govukInput({
          id: FIELDS.LAST_NAME.ID,
          name: FIELDS.LAST_NAME.ID,
          value: submittedValues[FIELDS.LAST_NAME.ID] or application.exporterBusiness[FIELDS.LAST_NAME.ID],
          label: {
            text: FIELDS.LAST_NAME.LABEL,
            classes: "govuk-label--s",
            attributes: {
              "data-cy": FIELDS.LAST_NAME.ID + "-label"
            }
          },
          classes: "govuk-input--width-10",
          attributes: {
            "data-cy": FIELDS.LAST_NAME.ID
          },
          errorMessage: validationErrors.errorList[FIELDS.LAST_NAME.ID] and {
            text: validationErrors.errorList[FIELDS.LAST_NAME.ID].text,
            attributes: {
              "data-cy": FIELDS.LAST_NAME.ID + "-error"
            }
          }
        }) }}

        {{ govukInput({
          id: FIELDS.EMAIL_ADDRESS.ID,
          name: FIELDS.EMAIL_ADDRESS.ID,
          value: submittedValues[FIELDS.EMAIL_ADDRESS.ID] or application.exporterBusiness[FIELDS.EMAIL_ADDRESS.ID],
          label: {
            text: FIELDS.EMAIL_ADDRESS.LABEL,
            classes: "govuk-label--s",
            attributes: {
              "data-cy": FIELDS.EMAIL_ADDRESS.ID + "-label"
            }
          },
          classes: "govuk-input--width-10",
          attributes: {
            "data-cy": FIELDS.EMAIL_ADDRESS.ID
          },
          errorMessage: validationErrors.errorList[FIELDS.EMAIL_ADDRESS.ID] and {
            text: validationErrors.errorList[FIELDS.EMAIL_ADDRESS.ID].text,
            attributes: {
              "data-cy": FIELDS.EMAIL_ADDRESS.ID + "-error"
            }
          }
        }) }}

        {{ govukInput({
          id: FIELDS.POSITION.ID,
          name: FIELDS.POSITION.ID,
          value: submittedValues[FIELDS.POSITION.ID] or application.exporterBusiness[FIELDS.POSITION.ID],
          label: {
            text: FIELDS.POSITION.LABEL,
            classes: "govuk-label--s",
            attributes: {
              "data-cy": FIELDS.POSITION.ID + "-label"
            }
          },
          classes: "govuk-input--width-10",
          attributes: {
            "data-cy": FIELDS.POSITION.ID
          },
          errorMessage: validationErrors.errorList[FIELDS.POSITION.ID] and {
            text: validationErrors.errorList[FIELDS.POSITION.ID].text,
            attributes: {
              "data-cy": FIELDS.POSITION.ID + "-error"
            }
          }
        }) }}
      </div>

      <div class="govuk-grid-column-three-quarters-from-desktop govuk-!-margin-top-5">
        <div class="govuk-button-group">
          {{ govukButton({
            text: CONTENT_STRINGS.BUTTONS.CONTINUE,
            attributes: {
              'data-cy': 'submit-button'
            }
          }) }}

          {{ govukButton({
            text: CONTENT_STRINGS.BUTTONS.SAVE_AND_BACK,
            classes: "govuk-button--secondary",
            attributes: {
              'data-cy': 'save-and-back-button',
              'formaction': SAVE_AND_BACK_URL
            }
          }) }}
        </div>
      </div>
    </form>
  </div>

{% endblock %}
