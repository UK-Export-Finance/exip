{% extends 'index.njk' %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from 'govuk/components/error-summary/macro.njk' import govukErrorSummary %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{%- from "moj/components/search/macro.njk" import mojSearch -%}

{% block content %}

  {{ govukBackLink({
    text: CONTENT_STRINGS.LINKS.BACK,
    href: BACK_LINK,
    attributes: {
      "data-cy": "back-link"
    }
  }) }}

  {% if validationErrors.summary %}
    {{ govukErrorSummary({
      titleText: "There is a problem",
      errorList: validationErrors.summary,
      attributes: {
        'data-cy': 'error-summary'
      }
    }) }}
  {% endif %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters-from-desktop">
        <span class="govuk-caption-xl" data-cy="heading-caption">
          {{CONTENT_STRINGS.HEADING_CAPTION}}
        </span>
      <h1 class="govuk-heading-xl" data-cy="heading">{{ CONTENT_STRINGS.PAGE_TITLE }}</h1>
    </div>

    <div class="govuk-grid-column-three-quarters-from-desktop">
      <form action="{{COMPANIES_HOUSE_POST_ROUTE}}" method="POST">

        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
        <div class="companies-house-search">

          {{ govukInput({
            label: {
              text: CONTENT_STRINGS.CRN_HEADING,
              classes: "govuk-label--m",
              isPageHeading: false,
              attributes: {
                "data-cy": "companies-house-search-label"
              }
            },
            hint: {
              html: CONTENT_STRINGS.CRN_HINT,
              attributes: {
                "data-cy": "companies-house-search-hint"
              }
            },
            attributes: {
              "data-cy": "companies-house-search"
            },
            id: FIELDS.COMPANY_HOUSE.INPUT,
            name: FIELDS.COMPANY_HOUSE.INPUT,
            value: submittedValues[FIELDS.COMPANY_HOUSE.INPUT],
            errorMessage: validationErrors.errorList.companiesHouseNumber and {
              text: validationErrors.errorList.companiesHouseNumber.text,
              attributes: {
                "data-cy": "companies-house-search-error"
              }
            }
          }) }}

          {{ govukButton({
            text: CONTENT_STRINGS.BUTTONS.SEARCH,
            classes: "govuk-button--secondary",
            attributes: {
              'data-cy': 'companies-house-search-button'
            }
          }) }}
        </div>
      </form>

      <p class="govuk-!-margin-bottom-6"><a class="govuk-link" href="/" data-cy="do-not-have-number">{{CONTENT_STRINGS.NO_COMPANY_HOUSE_NUMER}}</a></p>
    </div>

    {% if SUMMARY_LIST %}
      <div class="govuk-grid-column-three-quarters-from-desktop">
        <h3 class="govuk-fieldset__legend--m" data-cy="your-business-heading">{{CONTENT_STRINGS.YOUR_BUSINESS_HEADING}}</h3>

        {{ govukSummaryList({
          classes: 'govuk-!-margin-bottom-9',
          rows: SUMMARY_LIST.COMPANY_DETAILS.ROWS,
           attributes: {
            'data-cy': 'companies-house-summary-list'
          }
        }) }}
      </div>
    {% endif %}

    <form action="{{COMPANY_DETAILS_POST_ROUTE}}" method="POST" novalidate>
      <input type="hidden" name="_csrf" value="{{ csrfToken }}">

      <div class="govuk-grid-column-three-quarters-from-desktop">
        {{ govukRadios({
          classes: "govuk-radios--inline",
          idPrefix: FIELDS.YOUR_COMPANY.TRADING_NAME,
          name: FIELDS.YOUR_COMPANY.TRADING_NAME,
          fieldset: {
            legend: {
              text: CONTENT_STRINGS.TRADING_NAME,
              isPageHeading: false,
              classes: "govuk-fieldset__legend--m"
            },
            attributes: {
              'data-cy': 'trading-name'
            }
          },
          items: [
            {
              value: "yes",
              text: "Yes",
              checked: submittedValues[FIELDS.YOUR_COMPANY.TRADING_NAME] === 'yes',
              attributes: {
                'data-cy': "trading-name-yes"
              }
            },
            {
              value: "no",
              text: "No",
              checked: submittedValues[FIELDS.YOUR_COMPANY.TRADING_NAME] === 'no',
              attributes: {
                'data-cy': "trading-name-no"
              }
            }
          ],
          errorMessage: validationErrors.errorList.tradingName and {
            text: validationErrors.errorList.tradingName.text,
            attributes: {
              "data-cy": "trading-name-error"
            }
          }
        }) }}
      </div>

      <div class="govuk-grid-column-three-quarters-from-desktop">
        {{ govukRadios({
          classes: "govuk-radios--inline",
          name: FIELDS.COMPANY_DETAILS.TRADING_ADDRESS,
          fieldset: {
            legend: {
              text: CONTENT_STRINGS.TRADING_ADDRESS,
              isPageHeading: false,
              classes: "govuk-fieldset__legend--m"
            },
            attributes: {
              'data-cy': 'trading-address'
            }
          },
          items: [
            {
              value: "yes",
              text: "Yes",
              attributes: {
                'data-cy': "trading-address-yes"
              }
            },
            {
              value: "no",
              text: "No",
              attributes: {
                'data-cy': "trading-address-no"
              }
            }
          ]
        }) }}
      </div>

      <div class="govuk-grid-column-three-quarters-from-desktop">
        {{ govukInput({
          label: {
            text: CONTENT_STRINGS.WEBSITE,
            classes: "govuk-label--m",
            isPageHeading: false,
            attributes: {
            'data-cy': 'company-website-heading'
          }
          },
          id: FIELDS.COMPANY_DETAILS.WEBSITE,
          name: FIELDS.COMPANY_DETAILS.WEBSITE,
          classes: "input-width",
          attributes: {
            'data-cy': 'company-website'
          }
        }) }}
      </div>

      <div class="govuk-grid-column-three-quarters-from-desktop">
        {{ govukInput({
          label: {
            text: CONTENT_STRINGS.PHONE_NUMBER,
            classes: "govuk-label--m",
            isPageHeading: false,
            attributes: {
            'data-cy': 'company-phone-heading'
            }
          },
          hint: {
            text: CONTENT_STRINGS.PHONE_NUMBER_HINT,
            attributes: {
              'data-cy': 'company-phone-hint'
            }
          },
          id: FIELDS.COMPANY_DETAILS.PHONE_NUMBER,
          name: FIELDS.COMPANY_DETAILS.PHONE_NUMBER,
          classes: "input-width",
          attributes: {
            'data-cy': 'company-phone'
          }
        }) }}
      </div>

      <div class="govuk-grid-column-three-quarters-from-desktop">
        <div class="govuk-button-group">
          {{ govukButton({
            text: CONTENT_STRINGS.BUTTONS.CONTINUE,
            attributes: {
              'data-cy': 'continue-button'
            }
          }) }}

          {{ govukButton({
              text: CONTENT_STRINGS.BUTTONS.SAVE_AND_BACK,
              classes: "govuk-button--secondary",
              attributes: {
                'data-cy': 'save-and-back-button'
              }
          }) }}
        </div>
      </div>

    </form>
  </div>

{% endblock %}