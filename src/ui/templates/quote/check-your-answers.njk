{% extends 'index.njk' %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% import '../components/submit-button.njk' as submitButton %}

{% block pageTitle %}
  {{ CONTENT_STRINGS.PAGE_TITLE }}
{% endblock %}

{% block content %}

  {{ govukBackLink({
    text: CONTENT_STRINGS.LINKS.BACK,
    href: BACK_LINK,
    attributes: {
      "data-cy": DATA_CY.BACK_LINK
    }
  }) }}

  <h1 class="govuk-heading-l" data-cy="{{ DATA_CY.HEADING }}">{{ CONTENT_STRINGS.PAGE_TITLE }}</h1>

  <h2 class="govuk-heading-m" data-cy="summaryList-heading-export">{{ SUMMARY_LIST.EXPORT.GROUP_TITLE }}</h2>

  {{ govukSummaryList({
    classes: 'govuk-!-margin-bottom-9',
    rows: SUMMARY_LIST.EXPORT.ROWS
  }) }}

  <h3 class="govuk-heading-m" data-cy="summaryList-heading-policy">{{ SUMMARY_LIST.POLICY.GROUP_TITLE }}</h3>

  {{ govukSummaryList({
    classes: 'govuk-!-margin-bottom-9',
    rows: SUMMARY_LIST.POLICY.ROWS
  }) }}

  <form method="POST" data-cy="form" enctype="application/x-www-form-urlencoded" novalidate>

    <input type="hidden" name="_csrf" value="{{ csrfToken }}">

    {{ submitButton.render({
      text: CONTENT_STRINGS.SUBMIT_BUTTON
    }) }}

  </form>

{% endblock %}
